<mvc:View
    controllerName="com.fortify.demo.zui5fiori.controller.AddProduct"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:richtexteditor="sap.ui.richtexteditor">
    <Page id="addProductPage" title="Add New Product" showNavButton="true" navButtonPress=".onNavBack">
        <content>
            <VBox id="addProductContainer" class="sapUiMediumMargin">
                <form:SimpleForm id="productForm" editable="true" layout="ResponsiveGridLayout" labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false">
                    <form:content>
                        <Label id="productIdLabel" text="Product ID" required="true" />
                        <Input id="productIdInput" placeholder="Enter product ID" value="{addProduct>/product_id}" />
                        
                        <Label id="productNameLabel" text="Product Name" required="true" />
                        <Input id="productNameInput" placeholder="Enter product name" value="{addProduct>/product_name}" />
                        
                        <Label id="productDescLabel" text="Description" required="true" />
                        <richtexteditor:RichTextEditor id="productDescEditor" 
                            value="{addProduct>/description}" 
                            editorType="TinyMCE6"
                            width="100%"
                            height="200px"
                            customToolbar="true"
                            showGroupFont="true"
                            showGroupLink="true"
                            showGroupInsert="true"
                            sanitizeValue="false"
                            wrapping="true">
                        </richtexteditor:RichTextEditor>
                        
                        <Label id="productPriceLabel" text="Price (USD)" required="true" />
                        <Input id="productPriceInput" 
                            type="Number" 
                            placeholder="Enter price" 
                            value="{addProduct>/price}" />
                    </form:content>
                </form:SimpleForm>
                
                <HBox id="buttonContainer" justifyContent="Center" class="sapUiMediumMarginTop">
                    <Button id="submitBtn" text="Save Product" type="Emphasized" press=".onSaveProduct" class="sapUiTinyMarginEnd" />
                    <Button id="cancelBtn" text="Cancel" press=".onCancel" />
                </HBox>
                
                <MessageStrip id="messageStrip" 
                    text="" 
                    type="None" 
                    showIcon="true" 
                    visible="false"
                    class="sapUiMediumMarginTop" />
            </VBox>
        </content>
    </Page>
</mvc:View>
