<mvc:View controllerName="com.fortify.demo.zui5fiori.controller.App"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt">
    <Shell id="shell">
        <tnt:ToolPage id="toolPage">
            <tnt:header>
                <tnt:ToolHeader id="toolHeader">
                    <Title id="appTitle" text="Fortify SAP Demo" />
                    <ToolbarSpacer id="spacerHeader" />
                    <Button id="homeButton" type="Transparent" icon="sap-icon://home" text="Home" press="onPressHome"/>
                </tnt:ToolHeader>
            </tnt:header>
            <tnt:sideContent>
                <tnt:SideNavigation id="sideNavigation">
                    <tnt:NavigationList id="navigationList">
                        <tnt:NavigationListItem id="navDashboard" text="Dashboard" key="Dashboard" select="onNavigationSelect" icon="sap-icon://home" />
                        <tnt:NavigationListItem id="navCardTxn" text="Transactions" key="CardTxnSummary" select="onNavigationSelect" icon="sap-icon://sales-order" />
                        <tnt:NavigationListItem id="navProducts" text="Products" key="Products" select="onNavigationSelect" icon="sap-icon://product" />
                        <tnt:NavigationListItem id="navCustomers" text="Customers" key="Customers" select="onNavigationSelect" icon="sap-icon://customer" />
                    </tnt:NavigationList>
                    <tnt:fixedItem>
                        <tnt:NavigationList id="navigationListActions">
                            <tnt:NavigationListItem id="navAddProduct" text="Add Product" key="AddProduct" select="onNavigationSelect" icon="sap-icon://add-product" />
                            <tnt:NavigationListItem id="navAddCustomer" text="Add Customer" key="AddCustomer" select="onNavigationSelect" icon="sap-icon://add-contact" />
                            <tnt:NavigationListItem id="navQueryTxn" text="Send Query" key="QueryTxn" select="onNavigationSelect" icon="sap-icon://email" />
                        </tnt:NavigationList>
                    </tnt:fixedItem>
                </tnt:SideNavigation>
            </tnt:sideContent>
            <tnt:mainContents>
                <App id="app" />
            </tnt:mainContents>
        </tnt:ToolPage>
    </Shell>
</mvc:View>